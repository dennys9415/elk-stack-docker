# ELK Stack Docker Configuration
# Copy this file to .env and modify as needed

# Version Configuration
ELASTICSEARCH_VERSION=8.11.0
LOGSTASH_VERSION=8.11.0
KIBANA_VERSION=8.11.0

# Elasticsearch Configuration
ELASTICSEARCH_HEAP_SIZE=512m
ELASTICSEARCH_CLUSTER_NAME=es-docker-cluster
ELASTICSEARCH_NODE_NAME=elasticsearch

# Logstash Configuration
LOGSTASH_HEAP_SIZE=256m

# Network Configuration
ELK_NETWORK=elk

# Port Configuration
ELASTICSEARCH_HTTP_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300
KIBANA_PORT=5601
LOGSTASH_BEATS_PORT=5044
LOGSTASH_TCP_PORT=5000

# Security (Set to true for production)
XPACK_SECURITY_ENABLED=false